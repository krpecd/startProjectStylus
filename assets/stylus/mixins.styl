


//helpers
text-center(){
	text-align center
}

text-left(){
	text-align left
}

text-right(){
	text-align right
}

text-uppercase(){
	text-transform uppercase
}

text-lowercase(){
	text-transform lowercase
}

text-capitalize(){
	text-transform capitalize
}

center-block(){
	display block
	margin-left auto
	margin-right auto
}

pull-left(){
	float left
}

pull-right(){
	float right
}

//Clearfix
clearfix() {
	&:before,
	&:after {
		content: " ";
		display: table;
	}
	&:after {
		clear: both;
	}
}