//sprites
spriteWidth($sprite) {
	width: $sprite[4];
}

spriteHeight($sprite) {
	height: $sprite[5];
}

spritePosition($sprite) {
	background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
	background-image: url(images/$sprite[8]);
}

sprite($sprite) {
	spriteImage($sprite)
	spritePosition($sprite)
	spriteWidth($sprite)
	spriteHeight($sprite)
	display inline-block
}


//helpers
text-center(){
	text-align center
}

text-left(){
	text-align left
}

text-right(){
	text-align right
}

text-uppercase(){
	text-transform uppercase
}

text-lowercase(){
	text-transform lowercase
}

text-capitalize(){
	text-transform capitalize
}

center-block(){
	display block
	margin-left auto
	margin-right auto
}

pull-left(){
	float left
}

pull-right(){
	float right
}

//Clearfix
clearfix() {
	&:before,
	&:after {
		content: " ";
		display: table;
	}
	&:after {
		clear: both;
	}
}